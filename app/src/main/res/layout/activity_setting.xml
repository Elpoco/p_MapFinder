<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackGround"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.Toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="clickLogo"
            android:src="@drawable/logo"
            android:theme="@style/AppTheme.Toolbar" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorYellow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/SettingTheme"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="소리 알림" />

        <ToggleButton
            android:id="@+id/tb_sound"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/click_sound"
            android:checked="true"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tb_sound"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tb_sound"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="진동 알림" />

        <ToggleButton
            android:id="@+id/tb_vibrate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tb_sound"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/click_vibration"
            android:checked="true"
            android:textOff=""
            android:textOn="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tb_vibrate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tb_vibrate"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="문의하기" />

        <ImageView
            android:id="@+id/setting_qna"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_qna"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tb_vibrate"
            android:onClick="clickQnA"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            android:layout_marginTop="8dp"
            android:layout_below="@id/setting_qna"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_qna"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="광고보기" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_play"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_below="@id/setting_qna"
            android:onClick="clickPlay"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

</LinearLayout>